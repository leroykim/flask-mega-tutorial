{% extends "base.jinja" %}

{% block content %}
    <h1>Hi, {{ current_user.username }}!</h1>

    {% if form %}

    <form action="" method="post">
        {{ form.hidden_tag() }}
        <p>
            {{form.post.label}}<br>
            {{form.post(cols=32, rows=4)}}<br>
        </p>
        <p>{{ form.submit() }}</p>
    </form>

    {% endif %}

    {% for post in posts %}
        {% include "_post.jinja" %}
    {% endfor %}
{% endblock %}